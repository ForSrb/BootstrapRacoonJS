{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bootstrapbugz/shared": ["libs/shared/src/index.ts"],
      "@bootstrapbugz/angular-ui/shared": ["libs/angular-ui/shared/src/index.ts"],
      "@bootstrapbugz/angular-ui/admin": ["libs/angular-ui/admin/src/index.ts"],
      "@bootstrapbugz/angular-ui/auth": ["libs/angular-ui/auth/src/index.ts"],
      "@bootstrapbugz/angular-ui/user": ["libs/angular-ui/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
